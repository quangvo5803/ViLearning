@model List<Course>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách người dùng</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ManageCourse" asp-action="WaitingCourse" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Xét duyệt khóa học</a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Tên khóa học</th>
                    <th>Mô tả</th>
                    <th>Giá khóa học</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/course.js"></script>
}