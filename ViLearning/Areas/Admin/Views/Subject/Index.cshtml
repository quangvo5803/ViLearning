@model List<Subject>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Danh sách môn học</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Subject" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Tạo môn học mới</a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Tên môn học
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Subject" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-primary mx-2">Chỉnh sửa <i class="bi bi-pencil-square"></i></a>
                                <a onclick="Delete('/admin/subject/delete?id=@Model[i].Id')" class="btn btn-danger mx-2">Xóa <i class="bi bi-trash3"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/subject.js"></script>
}