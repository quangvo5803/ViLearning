@model IEnumerable<ViLearning.Models.Feedback>

@{
    ViewData["Title"] = "Feedback Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Rating</th>
                        <th>@Html.DisplayNameFor(model => model.FeedBackContent)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(model => model.ApplicationUser)</th>
                        <th>@Html.DisplayNameFor(model => model.Course)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.FeedBackStar)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FeedBackContent)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.ApplicationUser.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
