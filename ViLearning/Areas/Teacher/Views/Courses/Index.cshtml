@model List<Course>
<head>
    <link rel="stylesheet" href="~/css/Teacher/Courses.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   
</head>
<body>
    <section class="courses">
        <center>
            <h1 class="heading">Danh Sách Khóa Học</h1>
        </center>
        

        <div class="box-container">
            @foreach (Course course in Model)
            {
                <div class="box">

                    <div class="thumb">
                        <a asp-action="Details" asp-route-id="@course.CourseId"><img src="@course.CoverImgUrl" alt=""></a>
                        <div class="middle">
                            <div class="text"><div class="text"><a asp-action="Details" asp-route-id="@course.CourseId"></a></div>View detail</div>
                        </div>
                        
                    </div>
                    <h3 class="title">@course.CourseName</h3>
                    <p class="inline-btn">Lớp @course.Grade</p>
                    <a class="text-decoration-none" asp-action="Delete" asp-route-id="@course.CourseId">
                    <button class="delete-btn"><i class="fas fa-trash-alt"></i>Xóa Khóa Học</button>
                    </a>
                </div>
            }
            <a asp-action="Create">
                <div class="box add-course">
                    <div class="plus-icon">
                        <i class="fas fa-plus"></i>
                    </div>
                </div>
            </a>
        </div>

</body>
