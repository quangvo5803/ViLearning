@model List<Course>
<head>
    <link rel="stylesheet" href="~/css/Teacher/Courses.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <section class="courses">

        <h1 class="heading">our courses</h1>

        <div class="box-container">
            @foreach (Course course in Model)
            {
                <div class="box">

                    <div class="thumb">
                        <a href=""><img src="@course.CoverImgUrl" alt=""></a>
                        <div class="middle">
                            <div class="text">View detail</div>
                        </div>
                        <span>10 videos</span>
                    </div>
                    <h3 class="title">@course.CourseName</h3>
                    <p class="inline-btn">Lớp @course.Grade</p>
                    <button class="delete-btn"><i class="fas fa-trash-alt"></i> Delete</button>
                </div>
            }
            <a href="">
                <div class="box add-course">
                    <div class="plus-icon">
                        <i class="fas fa-plus"></i>
                    </div>
                </div>
            </a>

        </div>

</body>
