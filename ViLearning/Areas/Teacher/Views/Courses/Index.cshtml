@model List<Course>
<section class="courses">
    <center>
        <h1 class="heading">Danh Sách Khóa Học</h1>
    </center>
    <div class="container my-4">
        <form asp-action="Search" method="get" class="form-inline justify-content-center search-form">
            <input type="text" class="form-control" name="searchString" placeholder="Tìm kiếm khóa học..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn ml-2"><i class="fas fa-search"></i></button>
        </form>
    </div>

    <div class="box-container">
        @foreach (Course course in Model)
        {
            <div class="box h-100 d-flex flex-column">

                <div class="thumb mb-auto">
                    <a asp-action="Details" asp-route-id="@course.CourseId"><img src="@course.CoverImgUrl" alt=""></a>
                    <div class="middle mt-2">
                        <div class="text"><div class="text"><a asp-action="Details" asp-route-id="@course.CourseId"></a></div>View detail</div>
                    </div>

                </div>
                <h3 class="title mt-2">@course.CourseName</h3>
                <p class="inline-btn mt-2">Lớp @course.Grade</p>
                <a class="text-decoration-none mt-auto" asp-action="Delete" asp-route-id="@course.CourseId">
                    <button class="delete-btn mt-2"><i class="fas fa-trash-alt"></i>Xóa khóa học</button>
                </a>
            </div>
        }
        <a asp-action="Create">
            <div class="box add-course">
                <div class="plus-icon">
                    <i class="fas fa-plus"></i>
                </div>
            </div>
        </a>
    </div>

</section>
@section Styles {
    <link rel="stylesheet" href="~/css/Teacher/Courses.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
