        <div class="box-container">
            @foreach (Course course in Model)
            {
                <div class="box">

                    <div class="thumb">
                        <a asp-action="Details" asp-route-id="@course.CourseId"><img src="@course.CoverImgUrl" alt=""></a>
                        <div class="middle">
                            <div class="text"><div class="text"><a asp-action="Details" asp-route-id="@course.CourseId"></a></div>view detail</div>
                        </div>
                        
                    </div>
                    <h3 class="title">@course.CourseName</h3>
                    <p class="inline-btn">Lớp @course.Grade</p>
                    <a asp-action="Delete" asp-route-id="@course.CourseId">
                    <button class="delete-btn"><i class="fas fa-trash-alt"></i>Xóa Khóa Học</button>
                    </a>
                </div>
            }
            <a asp-action="Create">
