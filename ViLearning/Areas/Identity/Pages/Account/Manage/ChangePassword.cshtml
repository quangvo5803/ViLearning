@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="mt-5">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-3 bg-white rounded-md shadow-md p-7 flex flex-col gap-4">
        <div><a asp-page="/Account/Manage/Index" class="text-decoration-none font-weight-bold">Thông tin cá nhân</a></div>
        <div><a asp-page="/Account/Manage/ChangePassword" class="text-info text-decoration-none font-weight-bold">Thay đổi mật khẩu</a></div>
        @if (Model.Role.Contains("Student"))
        {
            <div><a asp-page="/Account/Manage/CertificateSubmit" class="text-decoration-none font-weight-bold">Nộp chứng chỉ giáo viên</a></div>
        }
        @if (Model.Role.Contains("Teacher"))
        {
            <div><a asp-page="/Account/Manage/BalanceTeacher" class="text-decoration-none font-weight-bold">Số dư</a></div>
        }
    </div>
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu cũ" />
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu mới" />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vui lòng xác nhận mật khẩu mới" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Cập nhật mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
